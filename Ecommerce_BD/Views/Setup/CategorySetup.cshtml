
@{
    ViewBag.Title = "CategorySetup";
}
<script src="~/Apps/JScontrollers/Setup/categorySetupController.js"></script>
<script src="~/Apps/JSservices/Setup/categorySetupService.js"></script>
<style>
    .margin_top {
        margin-top: 1%;
    }
</style>

<h2>CategorySetup</h2>

<div class="container" ng-app="EcommerceBD" ng-controller="categorySetupController">
    <div class="row">
        <div class="col-md-2">
            <label class="float-right">Category Id :</label>
        </div>
        <div class="col-md-2">
            <input id="txtCategoryId" ng-model="obj.cat.CATEGORY_ID" class="form-control float-left" style="width:100px;" readonly/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-2">
            <label class="float-right">English Name :</label>
        </div>
        <div class="col-md-2">
            <input id="txtEnglishName" ng-model="obj.cat.T_LANG2_NAME" class="form-control float-left" style="width:250px;" />
        </div>
    </div>
    <div class="row margin_top">
        <div class="col-md-2">
            <label class="float-right">Local Name :</label>
        </div>
        <div class="col-md-2 ">
            <input id="txtLocalName" ng-model="obj.cat.T_LANG1_NAME" class="form-control float-left" style="width:250px;" />
        </div>
    </div>
    <div class="row margin_top">
        <div class="col-md-2"></div>
        <div class="col-md-1">
            <input type="button" id="txtLocalName" class="btn btn-primary" ng-click="Save()" value="Save" title="Save" />
        </div>
    </div>
</div>
